<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivImgReadLater"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitleReadLater"
                android:maxLines="2"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/ivImgReadLater"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/ivImgReadLater"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginTop="25dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvSourceLaterRead"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/labelSource"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/labelSource" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/labelSource"
                android:layout_marginBottom="55dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivImgReadLater"
                app:layout_constraintStart_toStartOf="@+id/tvTitleReadLater"/>
        <TextView
                android:text="@string/publishedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelPublishedAt"
                app:layout_constraintStart_toStartOf="@+id/labelSource"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/labelSource"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPublishTimeReadLater"
                app:layout_constraintTop_toTopOf="@+id/labelPublishedAt"
                app:layout_constraintStart_toEndOf="@+id/labelPublishedAt"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbToSelect"
                android:visibility="gone"
                android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>