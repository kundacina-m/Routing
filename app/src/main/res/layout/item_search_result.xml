<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/ivImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:maxLines="2"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/ivImg"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/ivImg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSource"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/labelSource"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelSource"/>
    <TextView
            android:text="@string/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/labelSource"
            android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivImg"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"/>
    <TextView
            android:text="@string/publishedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelPublishedAt"
            app:layout_constraintStart_toStartOf="@+id/labelSource"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/labelSource"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPublishTime"
            app:layout_constraintTop_toTopOf="@+id/labelPublishedAt"
            app:layout_constraintStart_toEndOf="@+id/labelPublishedAt"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>