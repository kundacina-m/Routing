<resources>

	<!-- Base application DayNight Theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="panelBackground">@color/colorBackground</item>
		<item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

	</style>

	<!-- Dialog default theme -->
	<style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.75</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@style/FadeInOut</item>
		<item name="windowNoTitle">true</item>
		<item name="android:popupAnimationStyle">@style/FadeInOut</item>

	</style>

	<!-- Dialog default theme with click event disabled -->
	<style name="AppTheme.Dialog.NoClick">
		<item name="android:windowCloseOnTouchOutside">false</item>
	</style>

	<!-- ActionBar default theme -->
	<style name="AppTheme.ActionBar">
		<item name="android:background">@color/colorPrimary</item>
		<item name="android:windowCloseOnTouchOutside">false</item>
		<item name="android:textColorPrimary">@color/colorFrameTextIcons</item>
	</style>

	<style name="FadeInOut">
		<item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
		<item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
	</style>

</resources>
